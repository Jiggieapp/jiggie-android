    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="ExpandableToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--<style name="CustomFlatButtonStyle" parent="android:Widget.Material.Light.Button.Borderless">
        <item name="android:textColor">@color/blue_selector</item>
    </style>-->

    <style name="CustomFlatButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue_selector</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="fullHeightDialog" parent="android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TooltipText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="ToolTipStyle">
        <item name="ttlm_padding">@dimen/padding_standard</item>
        <item name="ttlm_strokeColor">#00BAFF</item>
        <item name="ttlm_backgroundColor">#00BAFF</item>
        <item name="ttlm_strokeWeight">2dip</item>
        <item name="ttlm_cornerRadius">8dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceInverse</item>-->
        <item name="android:textAppearance">@style/TooltipText</item>
        <item name="android:gravity">center</item>
        <item name="ttlm_elevation">4dip</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">@android:color/transparent</item>
        <item name="ttlm_repeatCount">0</item>
        <item name="ttlm_duration">0</item>
    </style>

</resources>
