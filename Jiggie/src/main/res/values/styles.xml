    <style name="AppTheme.Setup" parent="AppTheme">
        <item name="colorPrimaryDark">@color/setup_blue</item>
    </style>

    <!--<style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="CustomPopUpMenu" parent="android:Theme.Black">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>-->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
