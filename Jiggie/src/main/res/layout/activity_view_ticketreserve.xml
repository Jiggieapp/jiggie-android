<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin_bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_congrats"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/image_check"
                android:layout_margin="@dimen/padding_far"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_congrats"
                android:text="@string/vor_congrats"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_congrats"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="@dimen/padding_standard_half"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_congrats_info"
                android:text="@string/vor_congrats_info"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_congrats"
                android:textColor="@android:color/darker_gray"/>

            <RelativeLayout
                android:id="@+id/rel_event_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginTop="@dimen/padding_far"
                android:layout_marginBottom="@dimen/padding_far"
                android:background="@drawable/shape_dash"
                android:layout_below="@id/txt_congrats_info"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_event_title"
                    android:text="@string/vor_event_title"
                    android:textColor="@color/purple"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/padding_standard"
                    android:layout_marginBottom="@dimen/padding_standard_half"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_event_date"
                    android:text="@string/vor_event_date"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txt_event_title"
                    android:textColor="@android:color/darker_gray"
                    android:paddingBottom="@dimen/padding_standard"/>

            </RelativeLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_type_number_title"
                android:layout_below="@+id/rel_event_head"
                android:text="@string/vor_order_number"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:layout_margin="@dimen/padding_standard"
                android:textStyle="bold"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_type_number_fill"
                android:layout_below="@+id/rel_event_head"
                android:text="@string/vor_order_number_fill"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_margin="@dimen/padding_standard"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textAllCaps="true"
                />

            <View
                android:id="@+id/divider1"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/txt_type_number_fill"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                />

            <LinearLayout
                android:id="@+id/lin_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/divider1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_standard">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_guest_name_title"
                        android:text="@string/vor_guest_name"
                        android:layout_alignParentLeft="true"

                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_guest_name_fill"
                        android:text="@string/vor_guest_name_fill"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/normal_text_size"
                        android:textAllCaps="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:layout_marginBottom="@dimen/padding_standard">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_status_title"
                        android:text="@string/vor_status"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_status_fill"
                        android:text="@string/vor_status_paid"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/normal_text_size"
                        android:textAllCaps="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:layout_marginBottom="@dimen/padding_standard">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_payment_title"
                        android:text="@string/vor_payment_method"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_payment_fill"
                        android:text="@string/vor_payment_method_fill"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/normal_text_size"/>
                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_summary_title"
                android:layout_below="@+id/lin_order_number"
                android:text="@string/vor_order_summary"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginTop="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard_half"
                android:textStyle="bold"
                />

            <View
                android:id="@+id/divider2"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/lin_order_number"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/txt_summary_title"
                android:layout_margin="@dimen/padding_far"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_summary_date"
                android:layout_below="@+id/txt_summary_title"
                android:text="@string/vor_order_summary_date"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_far"
                />

            <LinearLayout
                android:id="@+id/lin_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/txt_summary_date">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:layout_marginBottom="@dimen/padding_standard">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_reg_ticket_title"
                        android:text="@string/vor_reg_ticket"
                        android:layout_alignParentLeft="true"

                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_reg_ticket_fill"
                        android:text="@string/vor_reg_ticket_fill"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/normal_text_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:layout_marginBottom="@dimen/padding_standard">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_ad_fee_title"
                        android:text="@string/vor_ad_fee"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_ad_fee_fill"
                        android:text="@string/vor_ad_fee_fill"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/normal_text_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:layout_marginBottom="@dimen/padding_standard">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_tax_title"
                        android:text="@string/vor_tax"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_tax_fill"
                        android:text="@string/vor_tax_fill"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/normal_text_size"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/lin_summary"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard"
                android:layout_toRightOf="@id/txt_summary_title"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_total"
                android:layout_below="@+id/divider3"
                android:text="@string/vor_total"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_far"
                android:textStyle="bold"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_total_fill"
                android:layout_below="@+id/divider3"
                android:text="@string/vor_total_fill"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_far"
                android:textStyle="bold"
                android:textColor="@color/purple"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_instruc"
                android:layout_below="@+id/txt_total_fill"
                android:text="@string/vor_instruction"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:layout_margin="@dimen/padding_standard"
                android:textStyle="bold"
                android:textColor="@color/purple"
                />

            <View
                android:id="@+id/divider4"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/txt_total_fill"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginTop="@dimen/padding_far"
                android:layout_marginBottom="@dimen/padding_standard"
                android:layout_toRightOf="@id/txt_instruc"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_instruc_fill"
                android:layout_below="@+id/txt_instruc"
                android:text="@string/vor_instruction_fill"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_include"
                android:layout_below="@+id/txt_instruc_fill"
                android:text="@string/vor_ticket_inc"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginTop="@dimen/padding_standard"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/lin_include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/txt_include">

            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_fineprint"
                android:layout_below="@+id/lin_include"
                android:text="@string/vor_fine_print"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginTop="@dimen/padding_standard"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/lin_fineprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/txt_fineprint">

            </LinearLayout>

            <View
                android:id="@+id/divider5"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/lin_fineprint"
                android:layout_marginTop="@dimen/padding_standard"
                />

            <RelativeLayout
                android:id="@+id/rel_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_standard"
                android:layout_below="@id/divider5">
                <RelativeLayout
                    android:id="@+id/img_clock"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_clock2x"/>
                </RelativeLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_event_title2"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/img_clock"
                    android:text="@string/vor_event_title"
                    android:textSize="14sp"
                    android:layout_marginBottom="@dimen/padding_standard_half"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_event_date2"
                    android:layout_below="@id/txt_event_title2"
                    android:layout_toRightOf="@id/img_clock"
                    android:text="@string/vor_event_date"
                    android:textSize="@dimen/normal_text_size"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginRight="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard"
                android:layout_below="@id/rel_event">

                <RelativeLayout
                    android:id="@+id/img_map"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_map2x"/>
                </RelativeLayout>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_venue_title"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/img_map"
                    android:text="@string/vor_event_title"
                    android:textSize="14sp"
                    android:layout_marginBottom="@dimen/padding_standard_half"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_venue_date"
                    android:layout_below="@id/txt_venue_title"
                    android:layout_toRightOf="@id/img_map"
                    android:text="@string/vor_event_date"
                    android:textSize="@dimen/normal_text_size"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/divider6"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rel_venue"
                />

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/rel_info_tap"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/vor_tap_info"
                android:layout_centerInParent="true"
                android:textSize="@dimen/normal_text_size"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_view_ticket"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_selector">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_view_ticket"
                android:text="@string/howtp_vo"
                android:layout_centerInParent="true"
                android:textColor="@color/common_plus_signin_btn_text_dark"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>