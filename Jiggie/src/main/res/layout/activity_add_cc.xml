<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_title_cc"
            android:text="@string/title_cc"
            android:layout_alignParentLeft="true"
            android:textColor="@color/purple"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_standard"
            android:textStyle="bold"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_cancel"
            android:text="@string/cancel"
            android:layout_alignParentRight="true"
            android:textColor="@color/common_plus_signin_btn_text_dark_disabled"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_standard"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rel_title"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_cc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cc_name_hint"
        app:met_baseColor="@color/textDarkGray"
        app:met_primaryColor="@color/skyBlue"
        app:met_textColorHint="@color/common_plus_signin_btn_text_light_disabled"
        app:met_errorColor="@android:color/holo_red_light"
        android:layout_below="@id/divider"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/padding_standard"
        android:layout_marginRight="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_standard_half"
        android:inputType="text"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_cc_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cc_number_hint"
        app:met_baseColor="@color/textDarkGray"
        app:met_primaryColor="@color/skyBlue"
        app:met_textColorHint="@color/common_plus_signin_btn_text_light_disabled"
        app:met_errorColor="@android:color/holo_red_light"
        android:layout_below="@id/edt_cc_name"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/padding_standard"
        android:layout_marginRight="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_standard_half"
        android:inputType="phone"/>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_below="@id/edt_cc_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/padding_standard"
        android:layout_marginRight="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_standard_half">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_cc_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cc_date_hint"
            app:met_baseColor="@color/textDarkGray"
            app:met_primaryColor="@color/skyBlue"
            app:met_textColorHint="@color/common_plus_signin_btn_text_light_disabled"
            app:met_errorColor="@android:color/holo_red_light"
            android:layout_below="@id/edt_cc_name"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/padding_standard_half"
            android:inputType="date"
            android:layout_weight="0.5"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_cc_cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cc_cvv_hint"
            app:met_baseColor="@color/textDarkGray"
            app:met_primaryColor="@color/skyBlue"
            app:met_textColorHint="@color/common_plus_signin_btn_text_light_disabled"
            app:met_errorColor="@android:color/holo_red_light"
            android:layout_below="@id/edt_cc_name"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/padding_standard_half"
            android:inputType="numberPassword"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_save"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_button_ticket_detail"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/cc_save"
            android:layout_centerInParent="true"
            android:textColor="@color/common_plus_signin_btn_text_dark"/>
    </RelativeLayout>


</RelativeLayout>