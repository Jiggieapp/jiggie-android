<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_standard_half"
        android:layout_marginLeft="@dimen/padding_standard"
        android:layout_marginRight="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_standard_half"
        android:orientation="horizontal">

        <ImageView
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:id="@+id/imageView"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/txtLeftTime"
            android:text="10:56PM"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_standard_half"
            android:layout_marginRight="@dimen/padding_standard_half"
            android:background="@drawable/bg_chat_blue"
            android:padding="@dimen/padding_standard"
            android:text="Lorem Ipsum is simply"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtRightTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="11:23PM"
            android:textSize="10sp"/>
    </LinearLayout>
</FrameLayout>