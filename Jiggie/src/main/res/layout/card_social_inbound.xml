<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/padding_standard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/wants_to_go_with"
        android:gravity="center_horizontal"
        android:id="@+id/txtUserInbound"/>

    <TextView
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txtEventInbound"/>

    <LinearLayout
        android:layout_margin="@dimen/padding_standard"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:layout_margin="@dimen/padding_standard_half"
            android:layout_gravity="center_vertical"
            android:layout_height="96dp"
            android:layout_width="96dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@null"
            android:id="@+id/imageUserInbound"
            android:scaleType="centerCrop"
            android:clickable="true"/>

        <FrameLayout
            android:layout_margin="@dimen/padding_standard_half"
            android:background="@drawable/bg_circle_accent"
            android:layout_gravity="center_vertical"
            android:layout_height="96dp"
            android:layout_width="96dp">

            <ImageView
                android:contentDescription="@null"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="22dp"
                android:src="@mipmap/ic_chat"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_margin="@dimen/padding_standard"
        android:text="@string/interested_question"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_standard"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="?attr/selectableItemBackground"
            android:textColor="@android:color/white"
            android:id="@+id/btnNoInbound"
            android:text="@string/no"
            android:textStyle="bold"/>

        <View
            android:background="@android:color/white"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="0.5dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="?attr/selectableItemBackground"
            android:textColor="@android:color/white"
            android:id="@+id/btnYesInbound"
            android:text="@string/yes"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>