<?xml version="1.0" encoding="utf-8"?>
<com.jiggie.android.view.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/header_view_start_text_size"
        android:textStyle="bold"
        android:layout_gravity="top"/>

    <TextView
        android:id="@+id/lblEventLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/event_name"
        android:layout_marginBottom="@dimen/padding_standard"
        android:paddingLeft="@dimen/huge_padding"
        android:text="@string/msg_dummy_title_info"
        android:textColor="@android:color/white" />

    <!--<TextView
        android:id="@+id/last_seen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@android:color/white" />-->
</com.jiggie.android.view.HeaderView>