<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_howtopay"
            android:text="@string/howtp_title"
            android:layout_alignParentLeft="true"
            android:textColor="@color/purple"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_standard"
            android:textStyle="bold"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_close"
            android:text="@string/howtp_close"
            android:layout_alignParentRight="true"
            android:textColor="@color/common_plus_signin_btn_text_dark_disabled"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_standard"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rel_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:layout_above="@+id/rel_view_orders"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lin_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/padding_standard">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.49">
                    <TextView
                        android:id="@+id/txt_t_limit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="@dimen/padding_standard"
                        android:text="@string/howtp_trlimit"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:id="@+id/txt_t_limit_fill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_t_limit_title"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="@dimen/padding_standard"
                        android:text="@string/howtp_trlimit_fill"
                        android:textColor="@color/purple"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <View
                        android:id="@+id/divider2"
                        android:background="@android:color/darker_gray"
                        android:layout_width="0.5dp"
                        android:layout_height="48dip"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.51">
                    <TextView
                        android:id="@+id/txt_t_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/padding_standard"
                        android:layout_marginBottom="@dimen/padding_standard"
                        android:text="@string/howtp_trlamo"
                        android:textSize="@dimen/normal_text_size"/>

                    <TextView
                        android:id="@+id/txt_t_amount_fill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_t_amount_title"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/padding_standard"
                        android:layout_marginBottom="@dimen/padding_standard"
                        android:text="@string/howtp_trlamo_fill"
                        android:textColor="@color/purple"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_to_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/padding_standard_half"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard"
                android:text="@string/howtp_trto"
                android:textSize="@dimen/normal_text_size"/>

            <TextView
                android:id="@+id/txt_to_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_to_title"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard_half"
                android:text="@string/howtp_trto_fill"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txt_jiggie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_to_fill"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard"
                android:text="@string/howtp_jg"
                android:textSize="@dimen/normal_text_size"/>

            <View
                android:id="@+id/divider3"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/txt_jiggie"
                android:layout_marginTop="@dimen/padding_standard_half"
                android:layout_marginBottom="@dimen/padding_standard_half"/>

            <TextView
                android:id="@+id/txt_step_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider3"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/padding_standard"
                android:text="@string/howtp_ste"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/textDarkGray"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider4"
                android:background="@android:color/darker_gray"
                android:layout_width="48dip"
                android:layout_height="3dp"
                android:layout_below="@id/txt_step_title"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard"/>

            <RelativeLayout
                android:id="@+id/rel_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_below="@id/divider4">
                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/numbering_1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txt_s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_1"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:text="@string/howtp_s1"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <View
                android:id="@+id/divider5"
                android:background="@android:color/darker_gray"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/padding_standard"
                android:layout_below="@id/rel_1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"/>

            <RelativeLayout
                android:id="@+id/rel_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_below="@id/divider5">
                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/numbering_2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txt_s2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_2"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:text="@string/howtp_s2"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <View
                android:id="@+id/divider6"
                android:background="@android:color/darker_gray"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/padding_standard"
                android:layout_below="@id/rel_2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"/>

            <RelativeLayout
                android:id="@+id/rel_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_below="@id/divider6">
                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/numbering_3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txt_s3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_3"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:text="@string/howtp_s3"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <View
                android:id="@+id/divider7"
                android:background="@android:color/darker_gray"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/padding_standard"
                android:layout_below="@id/rel_3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"/>

            <RelativeLayout
                android:id="@+id/rel_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_below="@id/divider7">
                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/numbering_4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txt_s4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_4"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:text="@string/howtp_s4"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <View
                android:id="@+id/divider8"
                android:background="@android:color/darker_gray"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/padding_standard"
                android:layout_below="@id/rel_4"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"/>

            <RelativeLayout
                android:id="@+id/rel_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_below="@id/divider8">
                <ImageView
                    android:id="@+id/img_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/numbering_5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txt_s5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_5"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:text="@string/howtp_s5"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <View
                android:id="@+id/divider9"
                android:background="@android:color/darker_gray"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/padding_standard"
                android:layout_below="@id/rel_5"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"/>

            <RelativeLayout
                android:id="@+id/rel_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_below="@id/divider9">
                <ImageView
                    android:id="@+id/img_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/numbering_6"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txt_s6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_6"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:text="@string/howtp_s6"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_6"
                android:layout_marginTop="@dimen/padding_standard"
                android:layout_marginLeft="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard"
                android:text="@string/howtp_star"
                android:layout_alignParentLeft="true"
                android:textColor="@color/purple"/>

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_6"
                android:layout_toRightOf="@id/txt_star"
                android:layout_marginTop="@dimen/padding_standard"
                android:layout_marginBottom="@dimen/padding_standard"
                android:text="@string/howtp_info"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginLeft="3dp"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rel_view_orders"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/blue_selector"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_view_orders"
            android:text="@string/howtp_vo"
            android:layout_centerInParent="true"
            android:textColor="@color/common_plus_signin_btn_text_dark"/>
    </RelativeLayout>

</RelativeLayout>