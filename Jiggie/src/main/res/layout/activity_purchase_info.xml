                </RelativeLayout>-->

                <TextView
                    android:id="@+id/txt_event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/padding_standard"
                    android:text="@string/msg_dummy_title"
                    android:textColor="@color/textDarkGray"
                    android:textSize="@dimen/font_subhead_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_event_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_event_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/padding_standard_half"
                    android:layout_marginTop="@dimen/padding_standard_half"
                    android:gravity="center_horizontal"
                    android:text="@string/msg_dummy_title_info"
                    android:textColor="@color/textDarkGray"
                    android:textSize="@dimen/font_body_size" />

                <TextView
                    android:id="@+id/txt_event_info_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_event_info"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/padding_far"
                    android:gravity="center_horizontal"
                    android:text="@string/msg_dummy_title_info"
                    android:textColor="@color/textDarkGray"
                    android:textSize="@dimen/font_body_size" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/txt_event_info_date"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:background="@color/dividercomm2" />

                <RelativeLayout
                    android:id="@+id/rel_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider1">

                    <RelativeLayout
                        android:id="@+id/rel_ticket_det"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_tik_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_far"
                            android:text="@string/pci_f1"
                            android:textColor="@color/textDarkGray"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_tik_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_far"
                            android:text="@string/pci_f1_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_fee_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/txt_tik_title"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f2"
                            android:textColor="@color/textDarkGray"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_fee_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/txt_tik_fill"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f2_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_tax_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/txt_fee_title"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:paddingBottom="@dimen/padding_far"
                            android:text="@string/pci_f3"
                            android:textColor="@color/textDarkGray"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_tax_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/txt_fee_fill"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:paddingBottom="@dimen/padding_far"
                            android:text="@string/pci_f3_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_table_det"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_dft_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_far"
                            android:text="@string/pci_f1b"
                            android:textColor="@color/textDarkGray"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_dft_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_far"
                            android:text="@string/pci_f1_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_taxx_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/txt_dft_title"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f3"
                            android:textColor="@color/textDarkGray"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_taxx_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/txt_dft_fill"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f2_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_ser_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/txt_taxx_title"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f3b"
                            android:textColor="@color/textDarkGray"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_ser_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/txt_taxx_fill"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f2_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/txt_ser_fill"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:background="@color/dividercomm2" />

                        <TextView
                            android:id="@+id/txt_est_tot_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/divider4"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f4b"
                            android:textColor="@color/textDarkGray"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_est_tot_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/divider4"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f2_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_require_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/txt_est_tot_title"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f5b"
                            android:textColor="@color/grayLight"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_require_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/txt_est_tot_fill"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:text="@string/pci_f2_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />

                        <View
                            android:id="@+id/divider5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/txt_require_fill"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:background="@color/dividercomm2" />

                        <TextView
                            android:id="@+id/txt_est_bal_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/divider5"
                            android:layout_marginLeft="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:paddingBottom="@dimen/padding_standard"
                            android:text="@string/pci_f6b"
                            android:textColor="@color/textDarkGray"
                            android:textSize="@dimen/font_body_size" />

                        <TextView
                            android:id="@+id/txt_est_bal_fill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/divider5"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:paddingBottom="@dimen/padding_standard"
                            android:text="@string/pci_f2_fill"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/font_body_size" />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/scrollContainer"
            android:layout_marginLeft="@dimen/padding_standard"
            android:layout_marginRight="@dimen/padding_standard"
            android:background="@color/dividercomm2" />

        <RelativeLayout
            android:id="@+id/rel_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:layout_above="@+id/lblSelectPayment"
            android:padding="@dimen/padding_standard">

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="@dimen/padding_standard_half"
                android:text="@string/pci_total"
                android:textColor="@color/textDarkGray" />

            <TextView
                android:id="@+id/txt_total_ticket_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/txt_total"
                android:paddingBottom="@dimen/padding_standard_half"
                android:text="@string/pci_total"
                android:textColor="@color/purple"
                android:gravity="right"/>

            <LinearLayout
                android:id="@+id/lin_total_inc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_total"
                android:orientation="horizontal">

                <View
                    android:id="@+id/minus_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="@dimen/padding_standard"
                    android:layout_weight="0"
                    android:background="@drawable/ic_minus_gr"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_total_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/pci_total_fill"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/plus_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_weight="0"
                    android:background="@drawable/ic_plus_gr"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <!--<View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/card_view"
            android:layout_marginLeft="@dimen/padding_standard"
            android:layout_marginRight="@dimen/padding_standard"
            android:background="@color/dividercomm2" />-->

        <TextView
            android:id="@+id/lblSelectPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/card_view"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_standard"
            android:layout_marginRight="@dimen/padding_standard"
            android:text="@string/select_payment_short"
            android:textColor="@color/textDarkGray"
            android:textSize="@dimen/font_body_size" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rel_bottom"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_standard_half"
            android:layout_marginLeft="@dimen/padding_standard_half"
            android:layout_marginRight="@dimen/padding_standard_half"
            android:layout_marginTop="@dimen/padding_standard_half"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:id="@+id/rel_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingRight="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_standard"
                        android:src="@drawable/ic_plus" />

                    <TextView
                        android:id="@+id/txt_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/padding_standard"
                        android:text="@string/pci_payment"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/font_body_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/purple_arrow2x" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/rel_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager_slide"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

            <RelativeLayout
                android:id="@+id/rel_disable"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/skyBlue"
                android:clickable="false"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/pci_slide"
                    android:textColor="@color/common_plus_signin_btn_text_dark"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>