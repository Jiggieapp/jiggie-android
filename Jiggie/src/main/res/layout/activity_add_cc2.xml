<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_title_cc"
            android:text="@string/title_cc"
            android:layout_alignParentLeft="true"
            android:textColor="@color/purple"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_standard"
            android:textSize="16sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_cancel"
            android:text="@string/cancel_caps"
            android:layout_alignParentRight="true"
            android:textColor="@color/common_plus_signin_btn_text_dark_disabled"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_standard"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rel_title"/>

    <EditText
        android:id="@+id/edt_cc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_standard"
        android:layout_below="@id/divider"
        android:background="@null"
        android:textColorHint="@color/common_plus_signin_btn_text_light_disabled"
        android:inputType="text"
        android:hint="@string/cc_name_hint"
        android:textSize="12sp"
        android:maxLines="1"
        android:singleLine="true"/>

    <View
        android:id="@+id/divider2"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/edt_cc_name"/>

    <EditText
        android:id="@+id/edt_cc_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_standard"
        android:layout_below="@id/divider2"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="number"
        android:hint="@string/cc_number_hint"
        android:textColorHint="@color/common_plus_signin_btn_text_light_disabled"
        android:textSize="12sp"/>

    <View
        android:id="@+id/divider3"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/edt_cc_number"/>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_below="@id/divider3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_standard_half"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_cc_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_standard"
                android:layout_below="@id/divider2"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="date"
                android:hint="@string/cc_date_hint"
                android:textColorHint="@color/common_plus_signin_btn_text_light_disabled"
                android:textSize="12sp"/>

            <View
                android:id="@+id/divider4"
                android:background="#30000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/edt_cc_date"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_standard_half"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_cc_cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_standard"
                android:layout_below="@id/divider2"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="date"
                android:hint="@string/cc_cvv_hint"
                android:textColorHint="@color/common_plus_signin_btn_text_light_disabled"
                android:textSize="12sp"/>

            <View
                android:id="@+id/divider5"
                android:background="#30000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/edt_cc_cvv"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/blue_selector"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txt_save"
            android:text="@string/cc_save"
            android:layout_centerInParent="true"
            android:textColor="@color/common_plus_signin_btn_text_dark"/>
    </RelativeLayout>


</RelativeLayout>